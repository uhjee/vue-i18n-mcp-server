{
  "name": "vue-i18n-mcp-server",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP server for Vue.js i18n automation with GitHub Copilot Agent Mode",
  "main": "dist/index.js",
  "bin": {
    "vue-i18n-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "setup": "node scripts/setup-mcp.js",
    "test": "jest",
    "test:pattern": "node tests/test-pattern-scanner.js",
    "test:mcp": "node scripts/test-mcp-server.js",
    "test:translation": "node tests/test-translation-matcher.js",
    "test:full": "node scripts/run-full-test.js",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "mcp",
    "github-copilot",
    "vue",
    "i18n",
    "automation",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@vue/compiler-sfc": "^3.4.0",
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/fs-extra": "^11.0.0",
    "@types/lodash": "^4.14.0",
    "@types/babel__parser": "^7.1.0",
    "@types/babel__traverse": "^7.20.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0"
  },
  "files": [
    "dist/",
    "templates/",
    "scripts/",
    "README.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/vue-i18n-mcp-server.git"
  }
